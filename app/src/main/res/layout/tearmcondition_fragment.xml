<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            style="@style/Defaultheading"
            android:id="@+id/containersTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:justificationMode="inter_word"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <CheckBox
            style="@style/Defaultheading"
            android:id="@+id/checkbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/containersTxt"
            android:text="@string/agree_to_terms_conditions"
            app:layout_constraintStart_toStartOf="@+id/containersTxt"
            app:layout_constraintEnd_toEndOf="@+id/containersTxt"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_40sdp"
            app:layout_constraintTop_toBottomOf="@+id/checkbox"
            android:text="Accept"
            android:textColor="@color/white"
            style="@style/Defaultheading"
            android:background="@drawable/button_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_35sdp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>