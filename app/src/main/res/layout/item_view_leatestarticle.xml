<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    android:layout_height="wrap_content"
    tools:ignore="MissingDefaultResource">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_130sdp"
        app:cardCornerRadius="@dimen/_16sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgArtical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/gufy">

        </ImageView>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtTitleArti"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="A Dream Start With OPN Staking"
        android:textSize="13sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/segoe_ui"
        app:layout_constraintEnd_toEndOf="@+id/cardView2"
        app:layout_constraintStart_toStartOf="@+id/cardView2"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />

    <TextView
        android:id="@+id/txtCreat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/by_rajveer_singh"
        android:layout_marginTop="@dimen/_8sdp"
        android:textSize="12sp"
        android:maxLines="2"
        android:fontFamily="@font/segoe_ui"
        app:layout_constraintStart_toStartOf="@+id/cardView2"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleArti" />


</androidx.constraintlayout.widget.ConstraintLayout>